{
  "TestSettings": {
    "BaseUrl": "https://the-internet.herokuapp.com",
    "DefaultTimeout": 30000,
    "RetryAttempts": 3,
    "RetryInterval": 1000,
    "ScreenshotOnFailure": true,
    "RecordVideoOnFailure": true,
    "TraceOnFailure": true,
    "Artifacts": {
      "ScreenshotsDirectory": "Artifacts/Screenshots",
      "VideosDirectory": "Artifacts/Videos",
      "TracesDirectory": "Artifacts/Traces",
      "LogsDirectory": "Artifacts/Logs",
      "ReportsDirectory": "Artifacts/Reports"
    },
    "Browser": {
      "Type": "chromium",
      "Headless": true,
      "SlowMo": 0,
      "ViewportSize": {
        "Width": 1920,
        "Height": 1080
      },
      "RecordVideo": {
        "Dir": "Artifacts/Videos",
        "Size": {
          "Width": 1920,
          "Height": 1080
        }
      }
    },
    "Logging": {
      "LogLevel": "Information",
      "IncludeTimestamp": true,
      "IncludeScenarioName": true,
      "IncludeStackTrace": true
    }
  }
} 